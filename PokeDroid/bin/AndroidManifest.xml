<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokedroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PokemonDisplay"
            android:label="@string/title_activity_pokemon_display" >
        </activity>
        <activity
            android:name=".PokemonLookupActivity"
            android:label="@string/title_activity_look_up_by_name" >
        </activity>
        <activity
            android:name=".TypeLookupActivity"
            android:label="@string/title_activity_type_lookup" >
        </activity>
        <activity
            android:name=".GenerationLookupActivity"
            android:label="@string/title_activity_generation_lookup" >
        </activity>
    </application>

</manifest>
